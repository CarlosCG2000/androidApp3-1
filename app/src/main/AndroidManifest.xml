<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme._0_Curso3appen1"
        tools:targetApi="31">

        <!-- Activity Menu (principal) -->
        <activity
            android:name=".MenuActivity"
            android:exported="true">
        <!-- Esto es lo que dice que es el Activity principal, el que sale cunaod se inicia la pantalla -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Activity - 1 App - Pantalla Principal -->
        <activity
            android:name=".primeraApp.FirstAppActivity"
            android:exported="true" />

        <!-- Activity 2 - 1 App - Pantalla Segunda -->
        <activity
            android:name=".primeraApp.ResultActivity"
            android:exported="false" />

        <!-- Activity - IMC Calculator App - Pantalla Principal -->
        <activity
            android:name=".imcCalculator.ImcCalculatorActivity"
            android:exported="false" />

        <!-- Activity - IMC Calculator App - Pantalla Secundaria -->
        <activity
            android:name=".imcCalculator.ResultIMCActivity"
            android:exported="false" />
    </application>


</manifest>